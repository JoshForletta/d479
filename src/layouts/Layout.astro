---
import '../styles/sanitize.css';
import '../styles/normalize.css'
import '../styles/main.css';
import '../styles/layout.css';
import '../styles/link.css';
import Link from '../components/Link.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
    <body class="content">
        <header data-content-width="feature">
            <h1><Link href="/d479" class="fs-extra-large">Header</Link></h1>
            <nav>
                <ul>
                    <li><Link href="/d479" data-link-style="underline">Home</Link></li>
                    <li><Link href="/d479/link1" data-link-style="underline">Link1</Link></li>
                    <li><Link href="/d479/link2" data-link-style="underline">Link2</Link></li>
                    <li><Link href="/d479/link3" data-link-style="underline">Link3</Link></li>
                </ul>
            </nav>
        </header>
		<slot />
	</body>
</html>

<style>
    header {
        position: sticky;
        top: 0;
        grid-row: 1;
        align-self: start;
        display: flex;
        justify-content: space-between;
        align-items: baseline;
    }

    header::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100vw;
        height: 100%;
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

    nav ul {
        display: flex;
        gap: 1rem;
    }
</style>
